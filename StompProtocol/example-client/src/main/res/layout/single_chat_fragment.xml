<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="2"
    android:id="@+id/rootlayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"

        android:layout_width="wrap_content"
        android:layout_alignRight="@id/ll"
        android:layout_height="wrap_content"
        android:tooltipText="Begin Chat"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/chat" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:focusableInTouchMode="true"
        tools:context="ua.naiksoftware.stompclientexample.GroupChatActivity">

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/messages_view"
            android:layout_weight="2"
            android:divider="#fff"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="Write a message"
                android:textColorHint="#ff6e83"
                android:paddingHorizontal="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines ="4"
                android:maxLength ="2000"
                android:scrollHorizontally="false"
                android:text="" />


            <ImageButton
                android:id="@+id/file_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/paper_clip_outline"/>

            <ImageButton
                android:id="@+id/sticker_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/typography"
                android:onClick="ShowPopupWindow"
                android:padding="20dp"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/send_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/send"
                android:backgroundTint="@color/colorAccent"
                android:padding="20dp"
                android:scaleType="fitCenter" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

