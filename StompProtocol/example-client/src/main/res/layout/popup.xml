<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:background="#f4ebff"
    android:layout_gravity="center"
    android:numColumns="2"
    android:padding="4dp"
    android:scrollbars="none"
    android:stretchMode="columnWidth"
    android:visibility="visible"
    android:id="@+id/submitPopup">

    <LinearLayout
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/chill_karo"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:src="@drawable/chill_karo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/jigar"
            android:layout_width="141dp"
            android:layout_height="47dp"

            android:layout_gravity="center"
            android:maxWidth="70dp"
            android:maxHeight="70dp"
            android:src="@drawable/jigar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/scene_on_hai"
            android:layout_width="170dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:maxWidth="70dp"
            android:maxHeight="70dp"
            android:src="@drawable/scene_on_hai" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:paddingTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lush"
            android:layout_width="138dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:maxWidth="70dp"
            android:maxHeight="70dp"
            android:src="@drawable/lush" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/oye"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxWidth="70dp"
            android:maxHeight="70dp"
            android:src="@drawable/oye" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/yaar"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:maxWidth="70dp"
            android:maxHeight="70dp"
            android:src="@drawable/yaar" />
    </LinearLayout>

</GridLayout>